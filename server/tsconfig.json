{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "CommonJS",
    "target": "ES6",
    "rootDir": "./src/",
    "lib": [
      "dom",
      "es2015.promise",
      "es6"
    ],
    "baseUrl": "..",
    "paths": {
      "@definitions/*": ["definitions/*"],
      "@app/*": ["server/src/*"]
    }

  },
  "include": [
    "./**/*"
  ]
}
