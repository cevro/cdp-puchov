{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "lib": [
      "dom",
      "es2015.promise",
      "es6"
    ],
    "baseUrl": "..",
    "paths": {
      "@definitions/*": [
        "definitions/*"
      ],
      "@app/*": [
        "server/src/*"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "../definitions/*"
  ]
}
